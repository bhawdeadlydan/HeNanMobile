<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="sjtu.rfid.transportsys.ArrivalActivity">

    <include
        layout="@layout/title"
        android:id="@+id/include3" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/include3"
        android:layout_alignParentStart="true"
        android:gravity="center_vertical"
        android:id="@+id/linearLayout5">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:text="申领单号："
                android:id="@+id/textView7"
                android:textSize="18dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:id="@+id/text_arrival_order_code" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="扫描获取订单"
                android:id="@+id/btn_arrival_scan_box_get_order"
                android:textSize="13dp"/>

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="扫描写入信息"
                android:id="@+id/button7"
                android:textSize="13dp" />
        </LinearLayout>

    </LinearLayout>

    <Button
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:text="提交"
        android:id="@+id/button5"
        android:layout_above="@+id/text_arrival_address"
        android:layout_alignParentEnd="true" />

    <ExpandableListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/list_arrive_sheets"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/textView10"
        android:layout_above="@+id/button5" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="当前位置：\n"
        android:id="@+id/textView8"
        android:textColor="#1974eb"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:id="@+id/text_arrival_address"
        android:textColor="#1974eb"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="货物列表："
        android:id="@+id/textView10"
        android:layout_below="@+id/linearLayout5"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:text="定位"
        android:id="@+id/btn_arrival_position"
        android:layout_above="@+id/text_arrival_address"
        android:layout_toStartOf="@+id/button5" />

</RelativeLayout>
