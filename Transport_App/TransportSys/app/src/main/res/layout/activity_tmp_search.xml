<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="sjtu.rfid.transportsys.TmpSearchActivity">

    <include
        layout="@layout/title"
        android:id="@+id/include7" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/include7"
        android:layout_alignParentStart="true"
        android:weightSum="1"
        android:id="@+id/linearLayout11">

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/edittext_tmp_search"
            android:layout_weight="0.8" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="查询"
            android:id="@+id/btn_tmp_search"
            android:layout_weight="0.2" />
    </LinearLayout>

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:id="@+id/listview_tmp_search_in"
        android:layout_below="@+id/textView11"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="入库信息"
        android:id="@+id/textView11"
        android:layout_below="@+id/linearLayout11"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="出库信息"
        android:id="@+id/textView12"
        android:layout_below="@+id/listview_tmp_search_in"
        android:layout_alignParentStart="true" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/listview_tmp_search_out"
        android:layout_below="@+id/textView12"
        android:layout_alignParentStart="true" />


</RelativeLayout>
