<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="sjtu.rfid.transportsys.MainActivity">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="50dp"
        android:gravity="center">

        <Button
            android:layout_width="150dp"
            android:layout_height="120dp"
            android:layout_marginLeft="15dp"
            android:text="配置信息"
            android:id="@+id/btn_main_config"
            android:layout_gravity="center_horizontal"/>

        <Button
            android:layout_width="150dp"
            android:layout_height="120dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:text="复核出库"
            android:id="@+id/btn_main_check"
            android:layout_gravity="center_horizontal" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearLayout"
        android:layout_alignParentStart="true"
        android:layout_marginTop="30dp"
        android:gravity="center">

        <Button
            android:layout_width="150dp"
            android:layout_height="120dp"
            android:layout_marginLeft="15dp"
            android:text="货物抵达暂存点"
            android:id="@+id/btn_main_arrive_tmp" />

        <Button
            android:layout_width="150dp"
            android:layout_height="120dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:text="货物抵达施工点"
            android:id="@+id/btn_main_arrive_construct"
            android:layout_gravity="center_vertical" />
    </LinearLayout>
</RelativeLayout>
