<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_receiving_sheet"
    android:orientation = "horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="收货单号："
        android:id="@+id/receiving_sheet_item_label"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="30dp"
        android:layout_marginStart="40dp"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="000000000000000"
        android:id="@+id/receiving_sheet_item_code"
        android:layout_alignTop="@+id/receiving_sheet_item_label"
        android:layout_toEndOf="@+id/receiving_sheet_item_label" />
</RelativeLayout>
