<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="sjtu.rfid.myapplication.MainActivity">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout12"
        android:layout_below="@+id/linearLayout15"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp"
        android:gravity="center">

        <Button
            android:layout_width="150dp"
            android:layout_height="120dp"
            android:layout_marginLeft="15dp"
            android:text="货物盘点"
            android:id="@+id/btn_mat_cehck"
            android:layout_below="@+id/btn_delivery"
            android:layout_alignParentStart="true"/>

        <Button
            android:layout_width="150dp"
            android:layout_height="120dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:text="货位盘点"
            android:id="@+id/btn_loc_check"
            android:layout_alignTop="@+id/btn_mat_cehck"
            android:layout_toEndOf="@+id/btn_mat_cehck" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:id="@+id/linearLayout13"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <Button
            android:layout_width="150dp"
            android:layout_height="120dp"
            android:layout_marginLeft="15dp"
            android:text="收货贴标"
            android:id="@+id/btn_receiving"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"/>

        <Button
            android:layout_width="150dp"
            android:layout_height="120dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:text="入库上架"
            android:id="@+id/btn_put_in_storage"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/btn_receiving"/>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearLayout13"
        android:layout_marginTop="20dp"
        android:layout_alignParentStart="true"
        android:id="@+id/linearLayout15">

        <Button
            android:layout_width="150dp"
            android:layout_height="120dp"
            android:layout_marginLeft="15dp"
            android:text="申领出库"
            android:id="@+id/btn_delivery"
            android:layout_below="@+id/btn_move_box"
            android:layout_toEndOf="@+id/btn_loc_check"/>

        <Button
            android:layout_width="150dp"
            android:layout_height="120dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:text="货物移位"
            android:id="@+id/btn_move_box"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/btn_put_in_storage"/>

    </LinearLayout>
</RelativeLayout>
