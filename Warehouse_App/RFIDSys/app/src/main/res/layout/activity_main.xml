<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="sjtu.rfid.myapplication.MainActivity"
    android:layout_weight="1">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout12"
        android:layout_below="@+id/linearLayout15"
        android:layout_marginTop="20dp"
        android:gravity="center">

        <Button
            android:layout_width="150dp"
            android:layout_height="80dp"
            android:layout_marginLeft="15dp"
            android:text="货物盘点"
            android:id="@+id/btn_mat_cehck"
            android:layout_below="@+id/btn_delivery"
            android:layout_weight="0.5"/>

        <Button
            android:layout_width="150dp"
            android:layout_height="80dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:text="货位盘点"
            android:id="@+id/btn_loc_check"
            android:layout_alignTop="@+id/btn_mat_cehck"
            android:layout_weight="0.5"/>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:id="@+id/linearLayout13"
        android:layout_alignParentTop="true">

        <Button
            android:layout_width="150dp"
            android:layout_height="80dp"
            android:layout_marginLeft="15dp"
            android:text="收货贴标"
            android:id="@+id/btn_receiving"
            android:layout_alignParentTop="true"
            android:layout_weight="0.5"/>

        <Button
            android:layout_width="150dp"
            android:layout_height="80dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:text="入库上架"
            android:id="@+id/btn_put_in_storage"
            android:layout_alignParentTop="true"
            android:layout_weight="0.5"/>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearLayout13"
        android:layout_marginTop="20dp"
        android:id="@+id/linearLayout15">

        <Button
            android:layout_width="150dp"
            android:layout_height="80dp"
            android:layout_marginLeft="15dp"
            android:text="申领出库"
            android:id="@+id/btn_delivery"
            android:layout_below="@+id/btn_move_box"
            android:layout_weight="0.5"/>

        <Button
            android:layout_width="150dp"
            android:layout_height="80dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:text="货物移位"
            android:id="@+id/btn_move_box"
            android:layout_alignParentTop="true"
            android:layout_weight="0.5"/>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearLayout15"
        android:layout_marginTop="120dp"
        android:id="@+id/linearLayout16">

        <Button
            android:layout_width="150dp"
            android:layout_height="80dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:text="配置信息"
            android:id="@+id/btn_config"
            android:layout_alignParentTop="true"
            android:layout_weight="0.5"/>
    </LinearLayout>


</RelativeLayout>
