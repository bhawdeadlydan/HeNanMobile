<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="sjtu.rfid.myapplication.MainActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="收货"
        android:id="@+id/btn_receiving"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="入库"
        android:id="@+id/btn_put_in_storage"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/btn_receiving" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="货物移位"
        android:id="@+id/btn_move_box"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/btn_put_in_storage" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="货物盘点"
        android:id="@+id/btn_mat_cehck"
        android:layout_below="@+id/btn_receiving"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="货位盘点"
        android:id="@+id/btn_loc_check"
        android:layout_alignTop="@+id/btn_mat_cehck"
        android:layout_toEndOf="@+id/btn_mat_cehck" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="出库"
        android:id="@+id/btn_delivery"
        android:layout_below="@+id/btn_move_box"
        android:layout_toEndOf="@+id/btn_loc_check" />
</RelativeLayout>
